<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@android:color/holo_blue_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Short Answer Fragment"
        android:id="@+id/frag_textview"/>

    <EditText
        android:id="@+id/frag_Q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Type question here"
        android:ems="10"
        android:layout_weight="0.00" />

    <EditText
        android:id="@+id/frag_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Type answer here"
        android:ems="10"
        android:layout_below="@+id/frag_Q"
        android:layout_weight="0.00" />

    <Button
        android:text="Save Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frag1Button" />

</LinearLayout>