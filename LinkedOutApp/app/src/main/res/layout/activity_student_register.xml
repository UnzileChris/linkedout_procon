<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.christopher.linkedoutapp.StudentRegisterActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeTextView"
            android:layout_weight="0"
            android:textAppearance="@style/H1"
            android:layout_marginRight="10dp" />

        <!-- Start Employer versus Student radio buttons -->
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checkedButton="@+id/switchToStudent">

            <RadioButton
                android:text="Student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchToStudent"
                android:layout_weight="1"
                android:textAppearance="@style/H2" />

            <RadioButton
                android:text="Employer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchToEmployer"
                android:layout_weight="1"
                android:textAppearance="@style/H2"
                android:onClick="changeViewToEmployer" />
        </RadioGroup>
        <!-- End Employer versus Student radio buttons -->
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/colorAccentMid"
        android:id="@+id/divider"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ProfileInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/ic_menu_camera"
                android:id="@+id/imageView4"
                android:layout_height="118dp"
                android:layout_width="100dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:layout_marginLeft="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nameStudentName"
                    android:layout_weight="1"
                    android:background="@color/colorAccentDark"
                    android:hint="Name"
                    style="@style/EditTextField"
                    android:textAppearance="@style/H1"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorAccentLight"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:layout_below="@+id/User_Name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/studentEmail"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="Email"
                    android:background="@color/colorAccentDark"
                    android:textColorHint="@color/colorAccentLight"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextField"
                    style="@style/EditTextField"
                    android:textColor="@color/colorText"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/registerStudentMajor"
                    android:layout_weight="1"
                    android:background="@color/colorAccentDark"
                    android:hint="Major"
                    style="@style/EditTextField"
                    android:textAppearance="@style/H1"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorAccentLight"
                    android:layout_marginBottom="10dp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/colorAccentMid"
        android:id="@+id/divider2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/registerStudentCity"
            android:background="@color/colorAccentDark"
            android:hint="City"
            style="@style/EditTextField"
            android:textAppearance="@style/H1"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorAccentLight"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:text="State"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/stateText"
            android:layout_weight="0.05" />

        <Spinner
            android:layout_width="100dp"
            android:id="@+id/stateSpinner"
            android:layout_height="wrap_content"
            android:entries="@array/state_list"
            android:layout_weight="0.04" />
    </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <TextView
             android:text="Graduation"
             android:layout_marginBottom="5dp"
             android:textSize="20dp"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/gradDateText"
             android:layout_weight="0.05" />

        <Spinner
            android:layout_width="150dp"
            android:id="@+id/FallSpringSpinner"
            android:layout_height="wrap_content"
            android:entries="@array/term_select"
            android:layout_weight="0.04" />
git
         <EditText
             android:layout_width="75dp"
             android:layout_height="wrap_content"
             android:inputType="textPersonName"
             android:ems="10"
             android:id="@+id/registerStudentGradYear"
             android:background="@color/colorAccentDark"
             android:hint="Year"
             style="@style/EditTextField"
             android:textAppearance="@style/H1"
             android:textColor="@color/colorText"
             android:textColorHint="@color/colorAccentLight"
             android:layout_marginBottom="10dp"
             android:layout_marginRight="10dp" />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Resume"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_weight="0"
            android:textAppearance="@style/H1" />

        <TextView
            android:text="Browse"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/browseSelect"
            android:layout_weight="1"
            android:textAppearance="@style/H2"
            android:background="@color/colorAccentDark"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp" />

        <Button
            android:text="..."
            android:layout_marginTop="10dp"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/button11" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/colorAccentMid"
        android:id="@+id/divider3"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textPassword"
            android:ems="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/studentUsername"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Username"
            android:background="@color/colorAccentDark"
            android:textColorHint="@color/colorAccentLight"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_margin="5dp"
            style="@style/EditTextField"
            android:textAppearance="@style/TextField"
            android:textColor="@color/colorText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/studentUsername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/studentPassword"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Password"
            android:background="@color/colorAccentDark"
            android:textColorHint="@color/colorAccentLight"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_margin="5dp"
            style="@style/EditTextField"
            android:textAppearance="@style/TextField"
            android:textColor="@color/colorText" />

    </LinearLayout>

    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/register_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccentHighlight"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />

</LinearLayout>
